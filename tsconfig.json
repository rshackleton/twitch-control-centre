{
  "compilerOptions": {
    "allowJs": true,
    "baseUrl": ".",
    "esModuleInterop": true,
    "jsx": "react",
    "module": "commonjs",
    "moduleResolution": "node",
    "noImplicitAny": true,
    "outDir": "dist",
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,

    "paths": {
      "*": ["node_modules/*"],

      "@components/*": ["src/app/components/*"],
      "@config/*": ["src/app/config/*"],
      "@redux/*": ["src/app/redux/*"],
      "@services/*": ["src/app/services/*"],
      "@views/*": ["src/app/views/*"],

      "@src/*": ["src/*"]
    }
  },
  "include": ["src/**/*"]
}
